[ < DO NOT COPY THIS TEXT PUT IT ON .JS FILE (Java script Zone) ]

  document.getElementById("loginForm").addEventListener("submit", function(event) {
    event.preventDefault();

    const lrn = document.getElementById("lrn").value.trim();
    const grade = document.getElementById("grade").value.trim();
    const errorMessage = document.getElementById("errorMessage");

    const validLRNs = ["123456789012"]; // Add more valid LRNs here

    if (!validLRNs.includes(lrn)) {
      errorMessage.textContent = "❌ Invalid Student LRN.";
      return; // Stop here, do NOT redirect
    }

    if (!grade) {
      errorMessage.textContent = "❌ Grade level is required.";
      return;
    }

    // If all checks pass
    errorMessage.textContent = "";
    localStorage.setItem("loggedIn", "true");
    window.location.href = "main.html";  [ change the "main.html" into your file .html DO NOT COPY THIS TEXT]
  });
  


